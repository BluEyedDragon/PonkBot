-
  var links = { 
    '/home'       : 'Ponk',
    '/help'       : 'Help',
    '/internals'  : 'Internals', 
  };

mixin navlink(page, title, active)
  if active
    li.active
      a( href=page )= title
  else
    li
      a( href=page )= title

mixin gennavbar(cpage)
  each t, p in links
    if p == cpage
      +navlink(p, t, true)
    else
      +navlink(p, t, false)

mixin pagenav(cpage)
  nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    .container-fluid
      .navbar-header
        span.navbar-brand #{bot.name}: #{bot.channel}
      #nav-collapsible.collapse.navbar-collapse
        ul.nav.navbar-nav
          +gennavbar(cpage)


mixin favicon()
  link( id='favicon', rel='shortcut icon', sizes='64x64', href='/favicon.png', type='image/png' )

mixin bootstrap_css()
  link( href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.6/cyborg/bootstrap.min.css', rel='stylesheet' )

mixin bootstrap_js()
  script( type='text/javascript', src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js' )

mixin jquery()
  script( type='text/javascript', src='//ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js' )

mixin socketio(serverIO)
  script( type='text/javascript', src='/sioconfig' )
  script( src=serverIO )

